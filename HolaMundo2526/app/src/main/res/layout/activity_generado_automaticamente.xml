<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2130"
    tools:context=".MainActivity">

    <!-- Título del Formulario -->
    <TextView
        android:id="@+id/textViewFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE USUARIO"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo Nombre -->
    <TextView
        android:id="@+id/labelNombre"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNombre"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/edittext_background"
        android:hint="Tu nombre completo"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#78909C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/labelNombre"
        app:layout_constraintTop_toBottomOf="@id/textViewFormTitle" />

    <!-- Campo Email -->
    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="@id/labelNombre"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextEmail"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="correo@ejemplo.com"
        android:textColorHint="#78909C"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_background"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNombre"
        app:layout_constraintStart_toStartOf="@id/editTextNombre"
        app:layout_constraintEnd_toEndOf="@id/editTextNombre" />

    <!-- Campo Teléfono -->
    <TextView
        android:id="@+id/labelTelefono"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="@id/labelNombre"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextTelefono"/>

    <EditText
        android:id="@+id/editTextTelefono"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="666 123 456"
        android:textColorHint="#78909C"
        android:inputType="phone"
        android:background="@drawable/edittext_background"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
        app:layout_constraintStart_toStartOf="@id/editTextNombre"
        app:layout_constraintEnd_toEndOf="@id/editTextNombre" />

    <!-- Campo Edad -->
    <TextView
        android:id="@+id/labelEdad"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Edad"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="@id/labelNombre"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextEdad"/>

    <EditText
        android:id="@+id/editTextEdad"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="18"
        android:textColorHint="#78909C"
        android:inputType="number"
        android:background="@drawable/edittext_background"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextTelefono"
        app:layout_constraintStart_toStartOf="@id/editTextNombre"
        app:layout_constraintEnd_toEndOf="@id/editTextNombre" />

    <!-- Campo Password -->
    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="@id/labelNombre"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextPassword"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Contraseña segura"
        android:textColorHint="#78909C"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextEdad"
        app:layout_constraintStart_toStartOf="@id/editTextNombre"
        app:layout_constraintEnd_toEndOf="@id/editTextNombre" />


    <!-- Botón Limpiar Datos -->
    <Button
        android:id="@+id/buttonLimpiar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Limpiar Datos"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#FF6F00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
