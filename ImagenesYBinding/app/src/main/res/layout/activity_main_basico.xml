<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1F"
    tools:context=".MainActivity">

    <!-- 1. IMAGEN PRINCIPAL (ImageView Básico) -->
    <!-- Ya no usamos CardView. La imagen se posiciona directamente. -->
    <!-- Usamos 'fitCenter' para que la imagen se vea completa sin ser recortada. -->
    <ImageView
        android:id="@+id/imageViewGrande"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t442"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- 2. TEXTO (Sin cambios, es un componente básico) -->
    <TextView
        android:id="@+id/textViewNombreImagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#E6E1E5"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/imageViewGrande"
        app:layout_constraintStart_toStartOf="@id/imageViewGrande"
        app:layout_constraintTop_toBottomOf="@id/imageViewGrande"
        tools:text="Nombre de la Táctica" />

    <!-- 3. CONTENEDOR DE MINIATURAS (LinearLayout dentro de un HorizontalScrollView) -->
    <!-- Esto se mantiene porque es la forma estándar de hacer una lista que se desplaza. -->
    <HorizontalScrollView
        android:id="@+id/scrollViewMiniaturas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contenedorMiniaturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- MINIATURAS (ImageViews Básicos) -->
            <!-- Ya no son ShapeableImageView. Son ImageView cuadrados y normales. -->
            <!-- Se quitan los bordes y las formas circulares. -->

            <ImageView
                android:id="@+id/miniatura1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t442"/>

            <ImageView
                android:id="@+id/miniatura2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t433" />

            <ImageView
                android:id="@+id/miniatura3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t4321" />

            <ImageView
                android:id="@+id/miniatura4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t451" />

            <ImageView
                android:id="@+id/miniatura5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/t541" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
